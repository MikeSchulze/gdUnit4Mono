{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug gdUnit4Mono",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${env:GODOT_BIN}",
            "args": [
                "--path",
                ".",
                "-d",
                "TestRunner.tscn"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "stopAtEntry": false,
            "justMyCode": false
        },
        {
            "name": "Attach gdUnit4Mono",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}
