{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/gdUnit4Mono.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/gdUnit4Mono.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/gdUnit4Mono.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "ListTests",
            "command": "dotnet",
            "dependsOn": "build",
            "type": "process",
            "args": [
                "vstest",
                "/TestAdapterPath:testadapter/bin/Debug/net7.0/",
                "/ListTests",
                "test/src/AssertionsTest.cs"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}
